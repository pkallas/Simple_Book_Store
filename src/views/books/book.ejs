<% include ../partials/header.ejs %>

  <% if (book) {%>
    <img  id="single-book-image" src=<%=book.img_url%>>
    <div id="single-book-info">
      <div id="single-book-title">Title: <%=book.title%></div>
      <div id="single-book-author">
        <% book.first_names.forEach(function (name, index) {%>
          By: <%=name%> <%=book.last_names[index]%>
          <% }) %>
      </div>
      <div id="single-book-genre">Genre(s): <%=book.genres.join(', ')%>
      </div>
  </div>
  <div id="single-book-purchase-info">
    <div id="single-book-price">Price: $<%=book.price%></div>
    <div id="single-book-in-stock">In Stock: <%=book.in_stock%></div>
    <button id="single-page-add-to-cart-button">Add to cart</button>
  </div>
  <div id="single-book-isbn-publisher">
    <div id="single-book-isbn">ISBN: <%=book.isbn%></div>
    <div id="single-book-publisher">Publisher: <%=book.publisher%></div>
  </div>
  <% } %>

<% include ../partials/footer.ejs %>
